@model IEnumerable<CRUDMVC8.Models.Person>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="text-dark font-monospace text-sm-center text-decoration-underline fst-italic text-shadow">CRUDMVC8</h1>
    <div class="row">
        <div class="offset-10 col-3">
            <a asp-controller="Home" asp-action="Create" class="btn-primary d-block btn-lg text-decoration-none mb-3">
                <i class="fa fa-plus" aria-hidden="true"></i> Nuevo Usuario
            </a>
        </div>
    </div> 
</div>
<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white">
                    <strong>Lista de Usuarios</strong>
                </h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @if (Model.Count() > 0)
                    {
                        <table class="table table-bordered" id="tblUsuarios" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.Id)</th>
                                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                                    <th>@Html.DisplayNameFor(m => m.Phone)</th>
                                    <th>@Html.DisplayNameFor(m => m.MobilePhone)</th>
                                    <th>@Html.DisplayNameFor(m => m.Email)</th>
                                    <th>@Html.DisplayNameFor(m => m.CreationDate)</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(m => item.Id)</td>
                                        <td>@Html.DisplayFor(m => item.Name)</td>
                                        <td>@Html.DisplayFor(m => item.Phone)</td>
                                        <td>@Html.DisplayFor(m => item.MobilePhone)</td>
                                        <td>@Html.DisplayFor(m => item.Email)</td>
                                        <td>@Html.DisplayFor(m => item.CreationDate)</td>
                                        <td>
                                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil" aria-hidden="true"></i>Editar</a>
                                            <a class="btn btn-secondary" asp-action="Detail" asp-route-id="@item.Id"><i class="fa fa-info-circle" aria-hidden="true"></i>Detalle</a>
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-eraser" aria-hidden="true"></i>Borrar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>No hay registros</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>