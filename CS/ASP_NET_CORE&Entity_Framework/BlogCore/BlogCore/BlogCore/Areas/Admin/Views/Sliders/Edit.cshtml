@model BlogCore.Models.Slider

@{
    ViewData["Title"] = "Editar Slider";
}

<br />
<br />
<h3 class="text-center">Editar Slider</h3>
<form method="post" asp-action="Edit" enctype="multipart/form-data">

    <input type="hidden" asp-for="Id" />

    <div class="row px-2  border">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="col-10  mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" placeholder="Ingresa el nombre" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <br />

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="State"></label>
                </div>
                <div class="col-8">
                    <input type="checkbox" asp-for="State" />
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
            </div>
            <br />

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="UrlImage"></label>
                </div>
                <div class="col-8">
                    <input type="file" name="files" id="uploadFile" class="form-control" />
                    <span asp-validation-for="UrlImage" class="text-danger"></span>
                </div>
            </div>
            <br />

            <div class="row">
                <div class="col">
                    <button type="submit" class="btn btn-primary form-control">Editar Slider</button>
                </div>
                &nbsp;
                <div class="col">
                    <a asp-action="Index" class="btn btn-success form-control">Volver atrás</a>
                </div>
            </div>

            <div class="col-4 pt-3">
                <img src="@Model.UrlImage" width="300px" style="border-radius:5px; border:1px solid #bbb9b9" />
            </div>
        </div>

    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}