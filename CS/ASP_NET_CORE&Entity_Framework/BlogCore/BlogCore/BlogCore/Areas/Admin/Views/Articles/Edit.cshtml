@model BlogCore.Models.ViewModels.ArticleVM

@{
    ViewData["Title"] = "Editar Artículo";
}

<br />
<br />
<h3 class="text-center">Editar artículo</h3>
<form method="post" asp-action="Edit" enctype="multipart/form-data">

    <input type="hidden" asp-for="Article.Id" />

    <div class="row px-2 border">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="col-8 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Article.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Article.Name" class="form-control" placeholder="Ingresa el nombre" />
                    <span asp-validation-for="Article.Name" class="text-danger"></span>
                </div>
            </div>
            <br />

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Article.Description"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="Article.Description" class="form-control" style="height: 300px"></textarea>
                    <span asp-validation-for="Article.Description" class="text-danger"></span>
                </div>
            </div>
            <br />

            <div class="form-group row">
                <div class="col-4">
                    <label for="Category">Categoría</label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.Article.IdCategory, Model.CategoriesList,
                             "-Por favor seleccione una categoría", new { @class = "form-control" })
                    <span asp-validation-for="Article.IdCategory" class="text-danger"></span>
                </div>
            </div>
            <br />

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Article.UrlImagen"></label>
                </div>
                <div class="col-8">
                    <input type="file" name="files" id="uploadFile" class="form-control" />
                    <span asp-validation-for="Article.UrlImagen" class="text-danger"></span>
                </div>
            </div>
            <br />

            <div class="row">
                <div class="col">
                    <button type="submit" class="btn btn-primary form-control">Editar Artículo</button>
                </div>
                &nbsp;
                <div class="col">
                    <a asp-action="Index" class="btn btn-success form-control">Volver atrás</a>
                </div>
            </div>
        </div>

        <div class="col-4 pt-3">
            <img src="@Model.Article.UrlImagen" width="300px" style="border-radius:5px; border:1px solid #bbb9b9" />
        </div>

    </div>

    <input type="hidden" asp-for="Article.CreationDate" />
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }

    <script src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/6.8.3/tinymce.min.js" integrity="sha512-VCEWnpOl7PIhbYMcb64pqGZYez41C2uws/M/mDdGPy+vtEJHd9BqbShE4/VNnnZdr7YCPOjd+CBmYca/7WWWCw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        tinymce.init(
            {
                selector : 'textarea',
                plugins : 'lists',
                menubar: 'file edit format'
            }
        );
    </script>
}