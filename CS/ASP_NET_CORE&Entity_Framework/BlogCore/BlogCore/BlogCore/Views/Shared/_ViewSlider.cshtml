@model BlogCore.Models.ViewModels.HomeVM
<!-- Slider -->
<div id="sliderImages" class="carousel slide">
    <div class="carousel-inner">

        @{
            int cont = 0;
        }

        @foreach (var slider in Model.Sliders)
        {
            var dynamicItem = cont++ == 0 ? "active" : " ";

            @if (slider.State == true)
            {
                <div class="carousel-item @dynamicItem";">
                    <img src="@Url.Content(slider.UrlImage)" class="d-block w-100" alt="...">
                    <h1 class="text-white text-center bg-dark py-1">@Html.Raw(slider.Name)</h1>
                </div>
            }
        }
        @* <div class="carousel-item active">
            <img src="..." class="d-block w-100" alt="...">
        </div>*@
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#sliderImages" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#sliderImages" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<!-- End Slider -->
